# ===========================================
# SOCIALGRAB - PRODUCTION ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/socialgrab

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Environment mode (always set to 'production' for live deployment)
NODE_ENV=production

# Server port (default: 5000, but can be changed based on hosting provider)
PORT=5000

# Secret key for session management (generate a strong random string)
SESSION_SECRET=your-super-secret-session-key-change-this

# Frontend URL (the domain where your frontend will be hosted)
FRONTEND_URL=https://yourdomain.com

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================
# Admin username for dashboard access
ADMIN_USERNAME=admin

# Admin password hash (use bcrypt to hash your password)
# You can generate this using: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=$2b$10$example.hash.replace.with.actual.bcrypt.hash

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================
# Stripe secret key (from Stripe Dashboard > Developers > API keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Stripe webhook secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
# Google Analytics 4 Measurement ID (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google AdSense Publisher ID (optional)
GOOGLE_ADSENSE_PUBLISHER_ID=pub-1234567890123456

# ===========================================
# EMAIL SERVICE CONFIGURATION (OPTIONAL)
# ===========================================
# SMTP configuration for email notifications
# Leave blank if not using email features
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These should be set in your frontend build environment
# Stripe publishable key (from Stripe Dashboard)
# VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_publishable_key

# Backend API URL (should match your backend deployment URL)
# VITE_API_BASE_URL=https://api.yourdomain.com

# Google Analytics ID for frontend tracking
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Google AdSense Publisher ID for frontend ads
# VITE_GOOGLE_ADSENSE_PUBLISHER_ID=pub-1234567890123456

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. Never commit this file with real values to version control
# 2. Ensure all required variables are set before starting the application
# 3. Use strong, unique values for SESSION_SECRET and passwords
# 4. Test your configuration in a staging environment first
# 5. Set up proper SSL/TLS certificates for HTTPS in production